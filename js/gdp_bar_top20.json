{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 20 Economies by GDP (2025)",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": "container",
  "height": 450,
  "data": {
    "url": "data/2020-2025.csv"
  },
  "transform": [
    {"filter": "datum['2025'] != null"},
    {"calculate": "toNumber(datum['2025'])", "as": "GDP_2025"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "GDP_2025", "order": "descending"}]
    },
    {"filter": "datum.rank <= 20"}
  ],
  "mark": {
    "type": "bar",
    "tooltip": true,
    "cursor": "pointer"
  },
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort": "-x",
      "axis": {
        "title": null,
        "labelFontSize": 11
      }
    },
    "x": {
      "field": "GDP_2025",
      "type": "quantitative",
      "title": "GDP (Millions USD)",
      "axis": {
        "format": "~s",
        "labelFontSize": 11
      }
    },
    "color": {
      "field": "GDP_2025",
      "type": "quantitative",
      "scale": {
        "scheme": "blues",
        "reverse": false
      },
      "legend": {
        "title": "GDP (Millions USD)",
        "format": "~s",
        "orient": "right",
        "labelFontSize": 11,
        "titleFontSize": 12
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "GDP_2025", "type": "quantitative", "title": "GDP (Millions USD)", "format": "~s"}
    ]
  }
}
