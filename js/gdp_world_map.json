{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "padding": 5,
  "config": {
    "background": "#fafbfc",
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {
      "fontSize": 16,
      "color": "#667eea",
      "anchor": "start"
    }
  },
  "title": {
    "text": "Global GDP Distribution (2020-2025)",
    "subtitle": "Use the slider below to explore GDP changes over time",
    "anchor": "start"
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "yearSelect",
      "value": 2025,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": { "sphere": {} },
      "mark": { "type": "geoshape", "fill": "#eaf4ff" }
    },
    {
      "data": {
        "url": "data/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "#d6dee6", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "data/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "#ffffff", "stroke": "#c0c0c0", "strokeWidth": 0.3 }
    },
    {
      "data": {
        "url": "data/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "calculate": "datum.properties.NAME == 'United States of America' ? 'United States' : datum.properties.NAME == 'Dominican Rep.' ? 'Dominican Republic' : datum.properties.NAME == 'Czech Rep.' ? 'Czech Republic' : datum.properties.NAME == 'Central African Rep.' ? 'Central African Republic' : datum.properties.NAME == 'Congo' ? 'Republic of the Congo' : datum.properties.NAME == 'Dem. Rep. Congo' ? 'Democratic Republic of the Congo' : datum.properties.NAME == 'CÃ´te d\\'Ivoire' ? 'Ivory Coast' : datum.properties.NAME == 'Bosnia and Herz.' ? 'Bosnia and Herzegovina' : datum.properties.NAME == 'Korea' ? 'South Korea' : datum.properties.NAME == 'Macedonia' ? 'North Macedonia' : datum.properties.NAME == 'Solomon Is.' ? 'Solomon Islands' : datum.properties.NAME == 'Timor-Leste' ? 'East Timor' : datum.properties.NAME == 'eSwatini' ? 'Eswatini' : datum.properties.NAME",
          "as": "CountryName"
        },
        {
          "lookup": "CountryName",
          "from": {
            "data": { "url": "data/2020-2025.csv" },
            "key": "Country"
          },
          "as": "gdpData"
        },
        {
          "calculate": "datum.gdpData == null ? null : toNumber(datum.gdpData[yearSelect])",
          "as": "gdp_value"
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "gdp_value",
          "type": "quantitative",
          "title": "GDP (USD)",
          "scale": {
            "type": "log",
            "zero": false,
            "scheme": "blues"
          }
        },
        "tooltip": [
          { "field": "CountryName", "type": "nominal", "title": "Country" },
          { "field": "gdp_value", "type": "quantitative", "title": "GDP (USD)", "format": "$~s" }
        ]
      }
    }
  ]
}
