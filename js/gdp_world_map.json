{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "World GDP Distribution 2025",
    "fontSize": 18,
    "fontWeight": "bold"
  },
  "width": 800,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "data/2020-2025.csv"
            },
            "key": "Country",
            "fields": ["2025"]
          },
          "as": ["GDP_2025"]
        },
        {"calculate": "toNumber(datum.GDP_2025)", "as": "GDP"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "GDP",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "blues"
          },
          "legend": {
            "title": "GDP (Billions USD)",
            "format": ",.0f"
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "GDP", "type": "quantitative", "title": "GDP (Billions USD)", "format": ",.0f"}
        ]
      }
    }
  ]
}
