{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Price by Year (Click a brand above)",
    "fontSize": 16,
    "fontWeight": "bold"
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "data/cars_info.csv"
  },
  "transform": [
    {"calculate": "toNumber(datum.Price)", "as": "PriceNum"},
    {"calculate": "toNumber(datum.Year)", "as": "YearNum"},
    {"filter": "isValid(datum.PriceNum) && isValid(datum.YearNum)"},
    {"filter": "datum.YearNum >= 2010 && datum.YearNum <= 2022"},
    {"joinaggregate": [{"op": "count", "as": "BrandTotal"}], "groupby": ["Brand"]},
    {"window": [{"op": "rank", "as": "BrandRank"}], "sort": [{"field": "BrandTotal", "order": "descending"}]},
    {"filter": "datum.BrandRank <= 15"},
    {"aggregate": [{"op": "mean","field":"PriceNum","as":"AvgPrice"}], "groupby": ["Brand","YearNum"]}
  ],
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 2,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "YearNum",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelAngle": -45,
        "labelFontSize": 10
      }
    },
    "y": {
      "field": "AvgPrice",
      "type": "quantitative",
      "title": "Average Price (AUD)",
      "axis": {
        "format": "$,.0f",
        "labelFontSize": 10
      },
      "scale": {
        "zero": false
      }
    },
    "color": {
      "field": "Brand",
      "type": "nominal",
      "legend": {
        "title": "Top 15 Brands (Click to highlight)",
        "orient": "bottom",
        "labelFontSize": 9,
        "titleFontSize": 10,
        "columns": 5
      }
    },
    "tooltip": [
      {"field": "Brand", "type": "nominal"},
      {"field": "YearNum", "type": "ordinal", "title": "Year"},
      {"field": "AvgPrice", "type": "quantitative", "title": "Avg Price", "format": "$,.0f"}
    ]
  }
}
