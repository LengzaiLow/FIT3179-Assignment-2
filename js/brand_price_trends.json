{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Price by Year (Click a brand above)",
    "fontSize": 16,
    "fontWeight": "bold"
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "data/cars_info.csv"
  },
  "transform": [
    {"filter": "datum.Year >= 2010 && datum.Year <= 2022"},
    {"filter": "datum.Price != null"},
    {"calculate": "toNumber(datum.Price)", "as": "PriceNum"},
    {
      "joinaggregate": [{"op": "count", "as": "BrandTotal"}],
      "groupby": ["Brand"]
    },
    {
      "window": [{"op": "rank", "as": "BrandRank"}],
      "sort": [{"field": "BrandTotal", "order": "descending"}]
    },
    {"filter": "datum.BrandRank <= 15"},
    {
      "aggregate": [{"op": "mean", "field": "PriceNum", "as": "AvgPrice"}],
      "groupby": ["Brand", "Year"]
    }
  ],
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 2,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelAngle": -45,
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "AvgPrice",
      "type": "quantitative",
      "title": "Average Price (AUD)",
      "axis": {
        "format": "$,.0f",
        "labelFontSize": 11
      },
      "scale": {
        "zero": false
      }
    },
    "color": {
      "field": "Brand",
      "type": "nominal",
      "legend": {
        "title": "Top 15 Brands",
        "orient": "bottom",
        "labelFontSize": 10,
        "titleFontSize": 11,
        "columns": 5
      }
    },
    "opacity": {
      "condition": {
        "param": "brand_selection",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {"field": "Brand", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "AvgPrice", "type": "quantitative", "title": "Avg Price", "format": "$,.0f"}
    ]
  }
}
