{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Most Popular Car Brands in Australia",
    "fontSize": 16,
    "fontWeight": "bold"
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "data/cars_info.csv"
  },
  "params": [
    {
      "name": "brand_selection",
      "select": {"type": "point", "fields": ["Brand"], "on": "click"}
    }
  ],
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Brand"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Count", "order": "descending"}]
    },
    {"filter": "datum.rank <= 15"}
  ],
  "mark": {
    "type": "bar",
    "tooltip": true,
    "cursor": "pointer"
  },
  "encoding": {
    "y": {
      "field": "Brand",
      "type": "nominal",
      "sort": "-x",
      "axis": {
        "title": null,
        "labelFontSize": 12
      }
    },
    "x": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Listings",
      "axis": {
        "format": ",",
        "labelFontSize": 11
      }
    },
    "color": {
      "condition": {
        "param": "brand_selection",
        "value": "#e7ba52"
      },
      "value": "#4c78a8"
    },
    "opacity": {
      "condition": {
        "param": "brand_selection",
        "value": 1
      },
      "value": 0.7
    },
    "tooltip": [
      {"field": "Brand", "type": "nominal"},
      {"field": "Count", "type": "quantitative", "title": "Listings", "format": ","}
    ]
  }
}
