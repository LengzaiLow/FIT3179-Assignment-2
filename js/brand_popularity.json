{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Most Popular Car Brands in Australia",
    "fontSize": 16,
    "fontWeight": "bold"
  },
  "width": "container",
  "height": 400,
  "params": [
    {
      "name": "brand_selection",
      "select": {"type": "point", "fields": ["Brand"], "on": "click"}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "data/cars_info.csv"
      },
      "transform": [
        {
          "aggregate": [{"op": "count", "as": "Count"}],
          "groupby": ["Brand"]
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "Count", "order": "descending"}]
        },
        {"filter": "datum.rank <= 15"}
      ],
      "mark": {
        "type": "bar",
        "tooltip": true,
        "cursor": "pointer"
      },
      "encoding": {
        "y": {
          "field": "Brand",
          "type": "nominal",
          "sort": "-x",
          "axis": {
            "title": null,
            "labelFontSize": 12
          }
        },
        "x": {
          "field": "Count",
          "type": "quantitative",
          "title": "Number of Listings",
          "axis": {
            "format": "~s",
            "labelFontSize": 11
          }
        },
        "color": {
          "condition": {
            "param": "brand_selection",
            "value": "#e7ba52"
          },
          "value": "#4c78a8"
        },
        "opacity": {
          "condition": {
            "param": "brand_selection",
            "value": 1
          },
          "value": 0.7
        },
        "tooltip": [
          {"field": "Brand", "type": "nominal"},
          {"field": "Count", "type": "quantitative", "title": "Listings", "format": ","}
        ]
      }
    },
    {
      "data": {
        "values": [{"Status": "Selected Brand"}, {"Status": "Other Brands"}]
      },
      "mark": {"type": "point", "opacity": 0},
      "encoding": {
        "color": {
          "field": "Status", 
          "type": "nominal",
          "scale": {"domain": ["Selected Brand", "Other Brands"], "range": ["#e7ba52", "#4c78a8"]},
          "legend": {"title": "Legend", "orient": "bottom", "columns": 2, "labelFontSize": 11, "titleFontSize": 11}
        }
      }
    }
  ]
}

