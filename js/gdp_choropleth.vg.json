{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global GDP by Country",
    "subtitle": "Select a year to explore changes in Gross Domestic Product (USD)",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "#003366"
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "yearParam",
      "value": 2025,
      "bind": { "input": "range", "min": 2020, "max": 2025, "step": 1, "name": "Year:" }
    }
  ],
  "layer": [
    {
      "data": { "sphere": {} },
      "mark": { "type": "geoshape", "fill": "#eaf4ff" }
    },
    {
      "data": {
        "url": "data/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "#d6dee6", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "data/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "#ffffff", "stroke": "#c0c0c0", "strokeWidth": 0.4 }
    },
    {
      "data": {
        "url": "data/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": { "url": "data/2020-2025.csv" },
            "key": "Country"
          },
          "as": "row"
        },
        {
          "calculate": "datum.row == null ? null : toNumber(datum.row[yearParam])",
          "as": "gdp_usd"
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "gdp_usd",
          "type": "quantitative",
          "title": "GDP (USD)",
          "scale": {
            "type": "log",
            "zero": false,
            "scheme": "blues"
          }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "gdp_usd", "type": "quantitative", "title": "GDP (USD)", "format": ",.0f" }
        ]
      }
    }
  ],
  "config": {
    "legend": { "labelFontSize": 10, "titleFontSize": 11 },
    "title": { "fontSize": 16 }
  }
}